<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorText"
    android:layout_height="match_parent">

    <include layout="@layout/video_title_layout">
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号太多记不住?"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信一键登录,更安全,更方便"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/vn"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/around_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11cf0e"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="登录"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="阅读并接受"
           android:textColor="@color/release"
           android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/around_treaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《转转使用条约与规范》"
            android:layout_marginLeft="2dp"
            android:textColor="@color/home_adapter_item"/>

    </LinearLayout>




</LinearLayout>