<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wel_come"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lanou.around.main.WelComeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1_welcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_weight="7" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >
        <ImageView
            android:id="@+id/img2_welcome"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        </RelativeLayout>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">




        <lanou.around.widget.RoundProgressBar
            android:id="@+id/roundProgressBar1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android_custom:roundColor="@android:color/white"
            android_custom:roundProgressColor="@android:color/background_dark"
            android_custom:roundWidth="2dp"
            android_custom:textColor="#9A32CD"
            android_custom:textIsDisplayable="false"
            android_custom:textSize="18sp" />



        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:text="跳过"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_welcome"
                android:layout_below="@+id/text1"
                android:text="5秒"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
