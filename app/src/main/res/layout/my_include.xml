<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    >


    <RelativeLayout

        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorRed">


        <RelativeLayout
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/kp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/v4" />
        </RelativeLayout>


    </RelativeLayout>







    <LinearLayout

        android:id="@+id/d2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"

        android:orientation="horizontal">

        <Button
            android:layout_below="@+id/dz"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FFFFFF"

            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/om"
            android:text="我发布的"
            android:textColor="@color/home_adapter_item" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:background="#00000000"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/on"
            android:text="我卖出的"
            android:textColor="@color/home_adapter_item" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:background="#FFFFFF"

            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/oh"
            android:text="我买到的"
            android:textColor="@color/home_adapter_item" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/op"
            android:text="我想要的"

            android:textColor="@color/home_adapter_item" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/itemBackgrand"></View>

    <Button
        android:id="@+id/around_zhima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:drawableLeft="@mipmap/pz"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="芝麻信用, 让交易更快更安全"
        android:textColor="@color/home_adapter_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/itemBackgrand"></LinearLayout>

    <Button
        android:id="@+id/around_my_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:drawableLeft="@mipmap/oi"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/v4"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="我的好友"
        android:textColor="@color/home_adapter_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/itemBackgrand"></LinearLayout>

    <Button
        android:id="@+id/around_my_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:drawableLeft="@mipmap/og"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/v4"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="我的账单"
        android:textColor="@color/home_adapter_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/itemBackgrand"></View>

    <Button
        android:id="@+id/around_red_packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:drawableLeft="@mipmap/oo"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/v4"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="红包"
        android:textColor="@color/home_adapter_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/itemBackgrand"></LinearLayout>

    <Button
        android:id="@+id/around_my_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:drawableLeft="@mipmap/ol"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/v4"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="我的圈子"
        android:textColor="@color/home_adapter_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/itemBackgrand"></LinearLayout>

    <Button
        android:id="@+id/around_help_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:drawableLeft="@mipmap/ok"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/v4"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="帮助中心"
        android:textColor="@color/home_adapter_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/itemBackgrand"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </LinearLayout>

</LinearLayout>