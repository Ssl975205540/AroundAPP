<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="105dp"
              android:layout_marginTop="15dp"
              android:background="@color/colorText"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_furniture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/home_adapter_item"/>

        <TextView
            android:id="@+id/tv_furniture_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_furniture_check"
            android:textColor="@color/home_adapter_item"/>

        <ImageView
            android:id="@+id/iv_furniture_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/v1"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/itemBackgrand"/>

    <lanou.around.widget.ExpandGridView
        android:id="@+id/gridView_furniture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="0.5dp"
        android:verticalSpacing="0.5dp"
        android:stretchMode="columnWidth"
        android:numColumns="3"
        android:background="@color/itemBackgrand"
        android:gravity="center"
        android:listSelector="@null">
    </lanou.around.widget.ExpandGridView>
</LinearLayout>
