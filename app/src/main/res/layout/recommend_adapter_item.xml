<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_sellerPhoto"

            android:layout_width="25dp"
            android:layout_height="25dp" />


        <TextView
            android:id="@+id/tv_sellerNickname"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/img_sellerPhoto"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_friendTime"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/scrollview_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/infoPrice"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/infoOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/infoCityName"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/area"
            android:layout_toRightOf="@+id/infoCityName"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/Leaving"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/Leaving"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>