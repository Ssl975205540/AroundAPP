<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorText"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/tab_item_image"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:layout_width="180dp"

        android:layout_gravity="center_horizontal"
        android:layout_height="180dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tab_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="方哈儿UI哦哈我还哦玩id道德经撒到"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/home_adapter_item"/>
    <TextView
        android:id="@+id/tab_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="¥68"
        android:textColor="@color/colorRed"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/si"/>
        <TextView
            android:id="@+id/tab_item_minlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离你254m"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black_a10_color"/>

        <TextView
            android:id="@+id/tab_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_a10_color"
            android:layout_marginLeft="20dp"
            android:text="57分钟前"/>

    </LinearLayout>



</LinearLayout>