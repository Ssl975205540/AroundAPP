<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <lanou.around.widget.PhotoDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:failureImage="@mipmap/ic_launcher"
            app:failureImageScaleType="centerInside"

            />
        <!--app:failureImage="@mipmap/icon_empty"-->

        <!--app:progressBarImage="@drawable/fb_progress_bar"-->
        <!--app:progressBarImageScaleType="centerInside"-->


        <com.pnikosis.materialishprogress.ProgressWheel

            android:id="@+id/progressWheel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:matProg_barColor="?attr/colorPrimary"
            app:matProg_barWidth="4dp"
            app:matProg_progressIndeterminate="true"
            app:matProg_rimColor="#2222"
            app:matProg_rimWidth="4dp"

            />


    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/check_view"
            android:layout_centerVertical="true"
            style="@style/checkbox"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
