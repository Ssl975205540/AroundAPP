<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/video_title_layout"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/vn"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转转"
        android:textSize="15sp"
        android:textColor="@color/home_adapter_item"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V2.5.1(2005001)"
        android:textSize="15sp"
        android:textColor="@color/home_adapter_item"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/about_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="检查与更新"
        android:textColor="@color/home_adapter_item"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp"
        android:drawableRight="@mipmap/v4"
        />
    <Button
        android:id="@+id/about_xieyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="规范与条约"
        android:textColor="@color/home_adapter_item"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/v4"
        />
    <Button
        android:id="@+id/about_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="联系我们"
        android:textColor="@color/home_adapter_item"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/v4"
        />



</LinearLayout>