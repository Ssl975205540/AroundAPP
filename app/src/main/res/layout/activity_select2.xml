<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lanou.around.main.SelectActivity">


    <RelativeLayout

        android:id="@+id/select_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_dark">


        <Button
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/background_dark"
            android:text="取消"
            android:textColor="@android:color/white" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/background_dark"
            android:text="选择相册"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_toolbar"
        android:background="@android:color/background_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="宝贝全景做封面,人气更高哦~"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/photo_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1">


    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:id="@+id/recyclerView_bottom"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@android:color/holo_red_dark">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/transparent"
                android:textSize="12dp"
                android:singleLine="false"
                android:text="0/12\n完成" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
