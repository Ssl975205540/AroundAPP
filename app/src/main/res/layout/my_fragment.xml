<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:orientation="vertical">
<ImageView
    android:id="@+id/around_setting"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/qv"
    android:layout_gravity="right"
    android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/kp"
                android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/v4"
            android:layout_marginTop="20dp"
          android:layout_marginLeft="260dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我发布的"
            android:textColor="@color/home_adapter_item"
            android:drawablePadding="10dp"
            android:background="#00000000"
            android:drawableTop="@mipmap/om"
           />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我卖出的"
            android:textColor="@color/home_adapter_item"
            android:drawablePadding="10dp"
            android:background="#00000000"
            android:drawableTop="@mipmap/on"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我买到的"
            android:textColor="@color/home_adapter_item"
            android:drawablePadding="10dp"
            android:background="#00000000"
            android:drawableTop="@mipmap/oh"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我想要的"
            android:textColor="@color/home_adapter_item"
            android:drawablePadding="10dp"
            android:background="#00000000"
            android:drawableTop="@mipmap/op"
            />

    </LinearLayout>

    <Button
        android:id="@+id/around_zhima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:text="芝麻信用,让交易更快更安全"
        android:textColor="@color/home_adapter_item"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/pz"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/itemBackgrand"
        ></LinearLayout>
    <Button
        android:id="@+id/around_my_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:textColor="@color/home_adapter_item"
        android:text="我的好友"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/oi"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/v4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/itemBackgrand"
        ></LinearLayout>
    <Button
        android:id="@+id/around_my_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:text="我的账单"
        android:textColor="@color/home_adapter_item"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/og"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/v4"
        />
    <Button
        android:id="@+id/around_red_packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:text="红包"
        android:textColor="@color/home_adapter_item"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/oo"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/v4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/itemBackgrand"
        ></LinearLayout>

    <Button
        android:id="@+id/around_my_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:text="我的圈子"
        android:textColor="@color/home_adapter_item"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/ol"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/v4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/itemBackgrand"
        ></LinearLayout>
    <Button
        android:id="@+id/around_help_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="2dp"
        android:textColor="@color/home_adapter_item"
        android:text="帮助中心"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/ok"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/v4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/itemBackgrand"
        ></LinearLayout>





</LinearLayout>